@model IEnumerable<BanHang.Context.OrderDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Hóa đơn</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Order.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order.CreateOnUtc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order.User.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order.User.Adress)
        </th>
        <th>
            Chức năng
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Order.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order.CreateOnUtc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order.User.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order.User.Adress)
        </td>
        <td>
            @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
